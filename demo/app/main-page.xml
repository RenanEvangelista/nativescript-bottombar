<Page 
	xmlns="http://schemas.nativescript.org/tns.xsd" 
	xmlns:bn="nativescript-bottombar" loaded="pageLoaded">
	<GridLayout rows="*, auto">
		<Label row="0" text="{{ message || 'Hello' }}" class="message" textWrap="true" />
		<GridLayout row="1">
			<bn:BottomBar tabSelected="tabSelected" titleState="{{ titleStateValue }}">
				<bn:BottomBar.items>
					<bn:BottomBarItem title="Cake" icon="ic_cake_white_24dp" color="#4CAF50" />
					<bn:BottomBarItem title="Favorites" icon="ic_favorite_white_24dp" color="#2196F3" />
					<bn:BottomBarItem title="Settings" icon="ic_settings_white_24dp" color="#FF4081" />
					<bn:BottomBarItem title="Settings" icon="ic_settings_white_24dp" color="#FF4081" />
				</bn:BottomBar.items>
			</bn:BottomBar>
		</GridLayout>
	</GridLayout>
</Page>
